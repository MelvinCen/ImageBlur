<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.melvin.imageblur.MainActivity">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/img_test"/>

    <Button
        android:id="@+id/bt_easyblur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_RenderScript"
        android:layout_marginBottom="6dp"
        android:text="使用easyblur模糊操作"/>

    <Button
        android:id="@+id/bt_RenderScript"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_fastblur"
        android:layout_marginBottom="6dp"
        android:text="使用RenderScript模糊操作"/>
    <Button
        android:id="@+id/bt_fastblur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="使用fastblur模糊操作"/>


</RelativeLayout>
